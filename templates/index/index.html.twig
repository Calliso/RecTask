{% extends 'base.html.twig' %}
{% block body %}

<div class="row justify-content-center">
    {{ form_start(form, {'attr': {'id': 'formCurrency'}} )}}
    <h3>Wprowadź datę</h3>
    <div class="form-group">
        {{ form_label(form.date, 'Dane na dzień:', {'label_attr': {'class': 'col-form-label'}}) }}
        <div>
            {{ form_widget(form.date, {'attr': {'class': 'foo'}}) }}
        </div>
    </div>
    <button type="submit" id="currencySubmit" class="btn btn-primary">Pokaż</button>
    {{ form_end(form)}}
</div>

<div class="row justify-content-center">
    <div class="col-10 mt-5">
        <div id="table" class="table-striped" style="display:none;">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Waluta</th>
                        <th scope="col">Kurs z dziś</th>
                        <th scope="col">Kurs ze wskazanej daty</th>
                        <th scope="col">Zmiana procentowa</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="js/main.js"></script>

{% endblock %}